{
    "manifest_version":2,
    "name":"Easy GCR Downloader",
    "version":"1.0",
    "permissions":["activeTab"],
    "content_scripts":
    [
        {
            "matches":[
                "<all_urls>"
            ],
            "js": ["content.js"]
        }
    ],
    
    "browser_action" : 
    {
        "default_icon": "myIcon.png",
        "default_popup": "pop.html",
        "default_title": "Easy GCR Downloader"
    }
}